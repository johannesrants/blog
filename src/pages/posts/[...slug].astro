---
import Layout from '../../layouts/Layout.astro';
import EmailSignup from '../../components/EmailSignup.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description}>
  <article>
    <header style="margin-bottom: 2rem;">
      <h1 style="margin: 0 0 0.5rem; font-size: 1.75rem; font-weight: 500; line-height: 1.3;">
        {post.data.title}
      </h1>
      <time style="color: #999; font-size: 0.9375rem;">
        {post.data.pubDate.toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric' 
        })}
      </time>
    </header>
    <div class="content">
      <Content />
    </div>
  </article>

  <EmailSignup />
</Layout>

<style>
  .content {
    font-size: 1rem;
    line-height: 1.7;
  }

  .content :global(h2) {
    margin: 2rem 0 1rem;
    font-size: 1.375rem;
    font-weight: 500;
    line-height: 1.4;
  }

  .content :global(h3) {
    margin: 1.5rem 0 0.75rem;
    font-size: 1.125rem;
    font-weight: 500;
    line-height: 1.4;
  }

  .content :global(p) {
    margin: 0 0 1.25rem;
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 0 0 1.25rem;
    padding-left: 1.5rem;
  }

  .content :global(li) {
    margin: 0.5rem 0;
  }

  .content :global(blockquote) {
    margin: 1.5rem 0;
    padding-left: 1rem;
    border-left: 2px solid #333;
    color: #999;
  }

  .content :global(code) {
    padding: 0.125rem 0.25rem;
    background: #2a2a2a;
    font-size: 0.9em;
    font-family: 'Monaco', 'Menlo', monospace;
  }

  .content :global(pre) {
    margin: 1.5rem 0;
    padding: 1rem;
    background: #2a2a2a;
    overflow-x: auto;
  }

  .content :global(pre code) {
    padding: 0;
    background: none;
  }

  .content :global(a) {
    color: #e5e5e5;
    text-decoration: underline;
  }

  .content :global(a:hover) {
    text-decoration: none;
  }

  .content :global(strong) {
    font-weight: 500;
  }
</style>

